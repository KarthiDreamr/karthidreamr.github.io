---
const { frontmatter } = Astro.props;
const { title, date, summary, topic } = frontmatter;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={summary} />
    <style is:global>@import '/src/styles/global.css';</style>
  </head>
  <body>
    <header class="container">
      <nav>
        <a href="/blog/"><strong>AI Red Team</strong></a>
      </nav>
    </header>
    <main class="container prose">
      {topic && <span class="pill">{topic}</span>}
      <h1>{title}</h1>
      <p style="color:var(--muted)">{new Date(date).toDateString()}</p>
      <slot />
    </main>
    <footer class="container">
      <small>Â© {new Date().getFullYear()} AI Red Team</small>
    </footer>
  </body>
</html> 